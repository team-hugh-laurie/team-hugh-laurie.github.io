---
import Layout from '../layouts/Layout.astro';
import chicken from '../images/chicken.jpeg';
import Task from '../components/Task.svelte';
---

<Layout title="Welcome to Astro.">
	<Task 
		client:load
		src={chicken.src} 
		target="chicken" 
		altWords={['tree', 'sun', 'drive']}
		onCorrect={() => alert('ok')}
		onError={() => alert('nope')}
	/>
</Layout>

<style>
	main {
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>
