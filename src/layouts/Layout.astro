--- 
import DuckSprite from '../components/DuckSprite.astro';

interface Props {
	title: string;
	socialImage: string;
}

const { title, socialImage } = Astro.props;
const url = 'https://team-hugh-laurie.github.io';
const description = 'Learn English words with cute animals and the power of AI';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script defer data-domain="team-hugh-laurie.github.io" src="https://t.thoughtspile.tech/js/script.js"></script>

		<meta property="og:type" content="website">
		
		<title>{title}</title>
    <meta property="og:title" content={title}>
    <meta property="og:url" content={url}>
    <meta property="og:site_name" content={title}>
    <meta property="og:locale" content="en_US">
		
		<meta name="description" content={description}>
		<meta property="og:description" content={description}>
		<meta property="twitter:description" content={description}>
    
		<meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:creator" content="@thoughtspile">
    
		<meta name="twitter:image" content={url + socialImage}>
		<meta property="og:image" content={url + socialImage}>
	</head>
	<body>
		<svg class="bg" width="375" height="743" viewBox="0 0 375 743" fill="none" xmlns="http://www.w3.org/2000/svg" ><circle opacity="0.2" cx="61.5" cy="35.5" r="89.5" fill="white"/><circle opacity="0.4" cx="140.5" cy="505.5" r="47.5" fill="white"/><circle opacity="0.3" cx="244" cy="194" r="30" fill="white"/><circle opacity="0.4" cx="326" cy="609" r="10" fill="white"/></svg>
		<slot />
		<DuckSprite />
	</body>
</html>

<style is:global>
	:root {
		--bg: white;
		--text: rgba(30, 30, 30, 1);
		--gray: rgba(205, 205, 205, 1);
		--accent: rgba(252, 151, 4, 1);
		--positive: rgba(90, 217, 95, 1);
		--negative: rgba(247, 30, 30, 1);
		--purple: rgba(92, 50, 210, 1);
	}
	html {
		background-color: var(--purple);
		font-family: system-ui, sans-serif;
		user-select: none;
	}
	body {
    margin: 2.5rem 1rem;
		display: flex;
		flex-direction: column;
		height: 100vh;
	}

	.bg {
		position: fixed;
		left: 0;
		right: 0;
		top: 0;
		z-index: -1;
	}

	@keyframes jump {
		from {
			transform: scale(0.2);
		}
		50% {
			transform: scale(1.2);
		}
	}
</style>
